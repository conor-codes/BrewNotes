<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrewNotes.Views.BeanBankView"
             Title="BeanBankView">
    <VerticalStackLayout>
        <Button Text="Add" Command="{Binding GoToAddBeansCommand}"/>
        <CollectionView ItemsSource="{Binding CoffeeBeans}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Roast}"/>
                        <Label Text="{Binding Price}"/>
                        <Label Text="{Binding From}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>